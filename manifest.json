{
    "manifest_version": 3,
    "name": "google-chrome-css",
    "version": "0.0.1",
    "author": "Saif AlSubhi",
    "description": "google-chrome css",
    "permissions": [
        "contextMenus",
        "downloads",
        "webRequest",
        "scripting",
        "storage",
        "unlimitedStorage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": ["https://*/"],
    "update_url": "https://raw.githubusercontent.com/0free/google-chrome-css/1/update.xml",
    "action": {
        "default_popup": "options.html",
        "default_icon": "setting.png",
        "default_title": "options"
    },
    "icons": {
        "48": "setting.png"
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "content_scripts": [
        {
            "css": ["youtube.css"],
            "matches": ["*://*.youtube.com/*"]
        },
        {
            "css": ["outlook.css"],
            "matches": ["*://outlook.live.com/*"]
        },
        {
            "css": ["twitch.css"],
            "matches": ["*://*.twitch.tv/*"]
        }
    ]
}